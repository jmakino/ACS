   @@section_label_table={}
 
   @@section_counters=[]
+  @@wordreplace=[
+    [/(^|\W)\+([a-zA-Z_]+)\+($|\W)/,"{\\tt", "}"],
+    [/(^|\W)\*(\w+)\*($|\W)/,"{\\bf", "}"],
+    [/(^|\W)\\_(\w+)\\_($|\W)/,"{\\it", "}"]
+  ]
+  
+  @@tagreplace=[
+    ["<tt>","</tt>","{\\tt", "}"],
+    ["<b>","</b>","{\\bf", "}"],
+    ["<em>","</em>","{\\it", "}"],
+    ["<i>","</i>","{\\it", "}"],
+    ["<tex>","</tex>","", ""]
+  ]
+  
 
+  def wordmarkup(instr)
+    @@wordreplace.each do |x| instr.gsub!(x[0]) do |word|
+	$1 + x[1]+ " " + $2 +x[2] + $3
+      end
+    end
+    instr
+  end
+
+  def process_wordmarkup(instring)
+    instring = instring.split("\n") if instring.class != Array
+    ostring = []
+    instring.each{|s| ostring.push(wordmarkup(s))}
+    ostring.join("\n")
+  end
+
